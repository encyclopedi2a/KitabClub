<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-9dp"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.sunbi.organisatiom.activity.kitabclub.fragments.About">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:background="#DCDCDC"
        android:padding="10dp"
        android:text="About Us"
        android:gravity="center"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/titleimage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E67A0A"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_call"
            android:gravity="center"
            android:text="Call"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:gravity="center"
            android:text="Mail"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_menu_mylocation"
            android:gravity="center"
            android:text="Web"
            android:textColor="#ffffff"
            android:textSize="17sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@android:drawable/ic_dialog_map"
            android:gravity="center"
            android:text="Map"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lineSpacingExtra="2dp"
        android:layout_weight="1.5"
        android:textSize="17sp"></TextView>
</LinearLayout>
